---
import Layout from '../../../components/Layout.astro';
import { apps } from '../../../data/apps';
import { getCollection } from 'astro:content';
import '../../../styles/global.css';

export async function getStaticPaths() {
  const privacyEntries = await getCollection('privacy');
  
  return apps.map(app => {
    const entry = privacyEntries.find(e => e.slug === app.id);
    return {
      params: { app_id: app.id },
      props: { app, privacyEntry: entry },
    };
  });
}

const { app, privacyEntry } = Astro.props;
const { Content } = privacyEntry ? await privacyEntry.render() : { Content: null };

const title = `${app.title} - Privacy Policy`;
const description = `Privacy Policy for ${app.title}`;
---

<Layout title={title} description={description}>
  <section class="section">
    <div class="privacy-content">
      <h1 class="page-title">{app.title} Privacy Policy</h1>
      
      <div class="markdown-content">
        {Content ? <Content /> : <p>Privacy policy content not found.</p>}
      </div>

      <div class="back-link">
        <a href="/apps">‚Üê Back to Apps</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .markdown-content {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    margin-bottom: 2rem;
    line-height: 1.8;
    color: #374151;
  }
  
  /* Markdown Styles */
  .markdown-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
  }

  .markdown-content :global(p) {
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul) {
    list-style: disc;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .back-link a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
