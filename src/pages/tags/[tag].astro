---
import Layout from '../../components/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import TagLink from '../../components/TagLink.astro';
import { getByTag, getAllTags } from '../../lib/posts';
import '../../styles/global.css';

export async function getStaticPaths() {
  const tags = await getAllTags();
  return tags.map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = await getByTag(tag);
const allTags = await getAllTags();
---

<Layout title={`Posts tagged with ${tag}`}>
  <div class="tag-header">
    <h1>#{tag}</h1>
    <p>{posts.length} post{posts.length !== 1 ? 's' : ''} found</p>
  </div>
  
  <section class="posts-section">
    {posts.length > 0 ? (
      posts.map((post) => (
        <PostCard post={post} />
      ))
    ) : (
      <div class="no-posts">
        <p>No posts found for this tag yet.</p>
      </div>
    )}
  </section>
  
  <aside class="all-tags">
    <h2>All Tags</h2>
    <div class="tags-list">
      {allTags.map(t => (
        <TagLink tag={t} />
      ))}
    </div>
  </aside>
</Layout>

<style>
  .tag-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }
  
  .tag-header h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }
  
  .tag-header p {
    font-size: 1.125rem;
    color: #6b7280;
  }
  
  .posts-section {
    margin-bottom: 4rem;
  }
  
  .all-tags {
    background-color: #f9fafb;
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
  }
  
  .all-tags h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }
  
  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .no-posts {
    text-align: center;
    padding: 3rem;
    color: #6b7280;
  }
  
  @media (max-width: 768px) {
    .tag-header h1 {
      font-size: 2rem;
    }
    
    .all-tags {
      padding: 1.5rem;
    }
  }
</style>
