---
import Layout from '../../components/Layout.astro';
import { countPersonalPosts, countAIGeneratedPosts } from '../../lib/posts';
import '../../styles/global.css';

const personalCount = await countPersonalPosts();
const aiGeneratedCount = await countAIGeneratedPosts();
---

<Layout title="Blog - Lumgoo">
  <div class="hero">
    <h1>Blog</h1>
    <p>Choose a category to explore articles</p>
  </div>

  <section class="blog-categories">
    <div class="category-grid">
      <a href="/blog/personal" class="category-card">
        <div class="card-icon">‚úçÔ∏è</div>
        <h2>Personal Articles</h2>
        <p>Handwritten articles and personal insights</p>
        <div class="card-count">{personalCount} {personalCount === 1 ? 'article' : 'articles'}</div>
        <div class="card-arrow">‚Üí</div>
      </a>

      <a href="/blog/ai-generated" class="category-card">
        <div class="card-icon">ü§ñ</div>
        <h2>AI-Generated Articles</h2>
        <p>Articles generated using AI</p>
        <div class="card-count">{aiGeneratedCount} {aiGeneratedCount === 1 ? 'article' : 'articles'}</div>
        <div class="card-arrow">‚Üí</div>
      </a>
    </div>
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }
  
  .hero h1 {
    font-size: 3rem;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 1rem;
  }
  
  .hero p {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .blog-categories {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }
  
  .category-card {
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    padding: 2.5rem 2rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  
  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .category-card:hover::before {
    transform: scaleX(1);
  }
  
  .category-card:hover {
    border-color: #3b82f6;
    box-shadow: 0 10px 25px rgba(59, 130, 246, 0.1);
    transform: translateY(-5px);
  }
  
  .card-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    line-height: 1;
  }
  
  .category-card h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.75rem;
  }
  
  .category-card p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .card-count {
    background: #eff6ff;
    color: #3b82f6;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }
  
  .card-arrow {
    font-size: 2rem;
    color: #3b82f6;
    transition: transform 0.3s ease;
  }
  
  .category-card:hover .card-arrow {
    transform: translateX(10px);
  }
  
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .hero p {
      font-size: 1rem;
    }
    
    .category-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .category-card {
      padding: 2rem 1.5rem;
    }
    
    .card-icon {
      font-size: 3rem;
    }
    
    .category-card h2 {
      font-size: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero {
      padding: 1.5rem 0;
    }
    
    .category-card {
      padding: 1.5rem 1rem;
    }
    
    .card-icon {
      font-size: 2.5rem;
    }
    
    .category-card h2 {
      font-size: 1.25rem;
    }
    
    .category-card p {
      font-size: 0.9rem;
    }
  }
</style>

